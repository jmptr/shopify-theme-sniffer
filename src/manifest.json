{
  "manifest_version": 3,
  "name": "Shopify Theme Sniffer",
  "version": "1.0.0",
  "description": "Detect Shopify storefronts and back up product catalog data for research.",
  "permissions": ["storage", "unlimitedStorage", "notifications", "tabs", "alarms"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Shopify Theme Sniffer"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["detect.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon-128.png"
  }
}
